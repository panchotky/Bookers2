<div class="about">
<h1>User info</h1>

<!-- フォーム欄 -->
<%= form_for(@user) do |f| %>

 <!-- エラーメッセージの表示 -->
  <% if @user.errors.any? %>
     <div id="error_explanation">
      <h2><%= @user.errors.count %>件のerrorが発生しました。</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<!-- 名前投稿フォーム -->
    <h4>Name</h4>
　　<%= f.text_field :name, class: "name" %>

<!-- 画像投稿フォーム -->
    <h4>Image</h4>
    <%= f.attachment_field :image, class: "user_image" %>

<!-- 自己紹介投稿フォーム -->
    <h4>Introduction</h4>
    <%= f.text_area :introduction, class: "introduction" %>
    
<!-- 送信フォーム -->
    <div class="submit-bottom">
    <%= f.submit "Up Date", class: "btn btn-primary" %>
    </div>

<% end %>


</div>
