<div class="container">
	<div class="row">

		<div class="col-lg-3"></div>

		

		<div class="col-lg-6">

			<h1 style="text-align: center;" class="fix">Editing Book</h1>

			<!-- バリデーションのエラー表示 -->
              <% if @book.errors.any? %>
			　　<div id="error_explanation">
			　　<h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
			　　<ul>
			　　<% @book.errors.full_messages.each do |message| %>
			　　　　<li><%= message %></li>
			　　<% end %>
			　　</ul>
			　　</div>
			<% end %>

            <div class="row">
			 <%= form_for(@book) do |f| %>


			

            <h4>Title</h4>
            <%=f.text_field :title, class: "book_title col-lg-12" %>

            <h4>Opinion</h4>
            <%=f.text_area :opinion, class: "book_body col-lg-12" %>
            <br>
            <br>
            <br>

            <%= f.submit 'Update Book', class: "btn btn-primary btn-block" %>

            <% end %>

            <%= link_to "Show", book_path(@book.id), class: "book_#{@book.id}" %>
            <%= link_to "Back", books_path, class: "back" %>
        </div>

		</div>

        <div class="col-lg-3"></div>
    </div>
</div>
