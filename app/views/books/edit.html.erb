<div class="container">
	<div class="row">

		<div class="col-lg-3"></div>

		

		<div class="col-lg-6">

			<h1 style="text-align: center;">Editing Book</h1>

			 <%= form_for(@book) do |f| %>

			<!-- バリデーションのエラー表示 -->
			<% if @book.errors.any? %>
			　　<div id="error_explanation">
			　　<h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
			　　<ul>
			　　<% @book.errors.full_messages.each do |message| %>
			　　　　<li><%= message %></li>
			　　<% end %>
			　　</ul>
			　　</div>
			<% end %>

            <h4>Title</h4>
            <%=f.text_field :title, class: "book_title" %>

            <h4>Opinion</h4>
            <%=f.text_area :opinion, class: "book_body" %>
            
            <div class="container-fluid" style="height: 30px; text-align: center; font-size: 20px;">
            <%= f.submit 'Update Book' %>
            </div>
            <% end %>

            <%= link_to "Show", book_path(@book.id), class: "book_#{@book.id}" %>
            <%= link_to "Back", books_path, class: "back" %>

		</div>

        <div class="col-lg-3"></div>
    </div>
</div>
